@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" asp-for="SearchTerm"/>
            <div class="input-group-append">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-search"></i>
            </a>
        </td>
        <td>
            <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-edit"></i>
            </a>
        </td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add new</a>